{
  "name": "@elizaos/plugin-cardano",
  "version": "1.0.10",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@elizaos/core": "^1.0.9",
    "@lucid-evolution/lucid": "^0.4.29",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "3.1.4",
    "prettier": "3.5.3",
    "tsup": "8.5.0",
    "typescript": "^5.8.3",
    "vitest": "3.1.4"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "tsup && elizaos test",
    "test:coverage": "vitest run --coverage",
    "lint": "prettier --write ./src",
    "clean": "rm -rf dist .turbo node_modules .turbo-tsconfig.json tsconfig.tsbuildinfo",
    "format": "prettier --write ./src",
    "format:check": "prettier --check ./src"
  },
  "peerDependencies": {
    "whatwg-url": "14.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elizaos-plugins/plugin-cardano.git"
  },
  "agentConfig": {
    "pluginType": "elizaos:plugin:1.0.0",
    "pluginParameters": {
      "CARDANO_SEED_PHRASE": {
        "type": "string",
        "minLength": 1,
        "description": "Your seed phrase for the Cardano Chain ecosystem. Grants full access to associated funds.",
        "optional": true
      },
      "CARDANO_BLOCKFROST_ID_PREPROD": {
        "type": "string",
        "minLength": 1,
        "description": "Your blockfrost key for the Cardano Preprod ecosystem.",
        "optional": true
      },
      "CARDANO_BLOCKFROST_ID_MAINNET": {
        "type": "string",
        "minLength": 1,
        "description": "Your blockfrost key for the Cardano Mainnet ecosystem.",
        "optional": true
      }
    }
  }
}
